@import '../../app.wxss';

.content-box {
  display: flex;
  margin-top: 20rpx;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 25rpx;
}

.content-box .header, .content-box .content, .content-box .footer {
  display: flex;
  width: 100%;
  box-sizing: border-box;
}

.content-box .header {
  justify-content: space-between; 
  padding: 0 30rpx 35rpx 0;
  border-bottom: 1px solid #d6d6d6;
  align-items: center;
}

.content-box .header .checkbox {
  display: flex;
  align-items: center;
}

.content-box .content {
  display: flex;
  padding: 35rpx 0;
  justify-content: space-between;
  border-bottom: 1px solid #d6d6d6;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.content>view{
  display: flex;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  /* border-bottom: 1px solid #d6d6d6; */
}

/* .content>view:last-child{
  padding-bottom: 0;
  border-bottom: 0;
} */

.content>view:first-child{
  padding-top: 0;
}

.desc {
  display: flex;
  flex-wrap: wrap;
  margin-left: 45rpx;
  align-items: center;
}

.desc>text, .desc>view {
  width: 100%;
}

.desc>view {
  display: flex;
  justify-content: space-between;
}

.image {
  width: 155rpx;
  height: 155rpx;
}

.content-box .footer {
  display: flex;
  flex-wrap: wrap;
}

.msg ,.content-box .footer .result{
  box-sizing: border-box;
  padding: 30rpx 35rpx;
  width: 100%;
  border-bottom: 1px solid #d6d6d6;
}

.msg {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.msg input {
  flex: 1;
  padding-left: 20rpx;
}

.content-box .footer .result{
  display: flex;
  justify-content: flex-end;
}

.content-box .footer {
  display: flex;
  width: 100%;
  justify-content: flex-end;
}

.btn {
  margin: 0 30rpx 0 0;
  width: 145rpx;
  height: 60rpx;
  font-size: 24rpx;
  background-color: transparent;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border: 1px solid #333;
}

.pay-box {
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
  background-color: #fff;
}

.pay-box .pay {
  width: 195rpx;
  margin: 0;
  background-color: #f75d45;
  color: #fff;
  border-radius: 0;
  line-height: 100rpx;
}