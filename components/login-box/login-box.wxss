@import '../../app.wxss';

.box {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100vh;
  z-index: 9999999999;
  position: fixed;
  background-color: rgba(0,0,0,.5);
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0;
}

.login-box {
  width: 490rpx;
  height: 645rpx;
  display: flex;
  flex-wrap: wrap;
  position: relative;
  align-items: center;
  margin-top: -100rpx;
}

.login-box .btn1 {
  width: 305rpx;
  height: 64rpx;
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  margin-left: -35%;
  background: #fff;
}

.login-box .btn1 image{
  width: 40rpx;
  height: 32rpx;
}

.close {
  width: 39rpx;
  height: 39rpx;
  position: absolute;
  right: 0;
  top: 180rpx;
}

.hidden {
  display: none;
}