.header {
  display: flex;
  justify-content: space-around;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  background: #38454e;
}

.now {
  color: white;
}

.active {
  color: #f75d45;
}

/*商家  */

.c_listCon {
  position: relative;
  margin-top: 10rpx;
}

.hotList {
  display: flex;
  width: 100%;
  background: white;
   padding: 19rpx 13rpx; 
}

.c_listCon .hotList .pro_img {
  width: 210rpx;
  height: 210rpx;
}

.c_listCon .hotList .pro_img image {
  height: 100%;
  width: 100%;
}

.c_listCon .pro_info {
  margin-left: 10rpx;
  width: 70%;
  margin-top: -5rpx;
}

.choiceStore {
  margin-left: 25rpx;
  width: 66%;
}

.choiceStore .storeName {
  display: flex;
  margin-bottom: 20rpx;
}

.choiceStore .storeName text:first-child {
  width: 80%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-right: 20rpx;
}

.choiceStore .storeName text:last-child {
  text-align: right;
}

.choiceStore .btn {
  display: inline-block;
  height: 40rpx;
  min-width: 100rpx;
  padding: 0 10rpx 0 10rpx;
  color: #f85c45;
  line-height: 40rpx;
  background-color: #fff;
  border: 1px solid #f85c45;
  box-sizing: content-box !important;
  margin-bottom: 10rpx;
}

.choiceStore .btn:last-child {
  margin-left: 10rpx;
}

.fc-gray9 {
  color: #999;
}

.storeAdress {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.storeAdress text:first-child {
  padding-right: 5rpx;
}

/*套餐  */

.c_listCon .pro_info .proText, .c_listCon .pro_info view {
  display: block;
  margin: 16rpx;
}

.c_listCon .pro_info .proTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.c_listCon .pro_info .proText:first-child {
  margin-top: 0;
}

.c_listCon .pro_info view text {
  padding-right: 20rpx;
}

.c_listCon .pro_info view text:last-child {
  color: #ccc;
}

.go_buy {
  padding: 0 !important;
  height: 40rpx;
  width: 100rpx;
  color: #f85c45;
  line-height: 40rpx;
  background-color: #fff;
  border: 1px solid #f85c45;
  box-sizing: content-box !important;
  margin-top: -28px;
  margin-right: 30rpx;
}

/*商品  */

.list {
  display: flex;
  width: 100%;
  background: white;
   padding: 25rpx 13rpx; 
}

.c_listCon .list .pro_img {
  width: 210rpx;
  height: 210rpx;
}

.c_listCon .list .pro_img image {
  height: 100%;
  width: 100%;
}

.saleHot {
  height: 45rpx;
  width: 140rpx;
  color: #f85c45;
  line-height: 45rpx;
  background-color: #fff;
  border: 1px solid #f85c45;
  border-radius: 30rpx;
  text-align: center;
}

.tongbeiIcon {
  width: 41rpx;
  height: 31rpx;
  padding-left: 15rpx;
  vertical-align: text-bottom;
}

/*删除  */

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
  width: 100%;
  overflow: hidden;
  margin-bottom: 15rpx;
}

.content {
  transition: all 0.4s;
  transform: translateX(100rpx);
  margin-left: -100rpx;
}

.content-active{
  transform: translateX(0)!important;
}

.del {
  background-color: orangered;
  width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  z-index: 9999;
  transition: all 0.4s;
}

.del-hidden{
  transform: translateX(90px);
}

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

button:after{
  border:none;
}