.out-side-aftersaleapply {
  background-color: #f4f4f4;
  min-height: 100vh;
  padding: 0 0 120rpx;
  overflow: hidden;
}

.out-side-aftersaleapply .goods-bar {
  background-color: #fff;
  overflow: hidden;
  padding: 35rpx 20rpx 40rpx;
}

.out-side-aftersaleapply .goods-bar .goods-img {
  width: 164rpx;
  height: 164rpx;
  float: left;
  margin: 5rpx 18rpx 0 0;
}

.out-side-aftersaleapply .goods-bar .goods-img image {
  width: 164rpx;
  height: 164rpx;
  border-radius: 10rpx;
}

.out-side-aftersaleapply .goods-bar .goods-main {
  width: 528rpx;
  overflow: hidden;
  float: left;
}

.out-side-aftersaleapply .goods-bar .name {
  width: 100%;
  max-height: 80rpx;
  line-height: 40rpx;
}

.out-side-aftersaleapply .goods-bar .sku {
  width: 100%;
  line-height: 40rpx;
}

.out-side-aftersaleapply .goods-bar .price-bar {
  line-height: 28rpx;
  padding-top: 15rpx;
}

.out-side-aftersaleapply .goods-bar .price-bar .price {
  display: inline-block;
  float: right;
}

.out-side-aftersaleapply .after-ul {
  display: block;
  background-color: #fff;
  overflow: hidden;
  margin-top: 20rpx;
  padding: 0 20rpx;
}

.out-side-aftersaleapply .after-li {
  display: block;
  min-height: 90rpx;
  position: relative;
  border-top: 1px solid #eee;
}

.out-side-aftersaleapply .after-li:first-child {
  border-top: none;
}

.out-side-aftersaleapply .after-li .txt {
  display: inline-block;
  line-height: 90rpx;
}

.out-side-aftersaleapply .after-li .icon {
  display: inline-block;
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  right: 0;
  top: 32rpx;
  background: url('https://api.duishangbao.cn/upload/image/icon_zu2.png') no-repeat 0 -1050rpx / 70rpx 1190rpx;
  z-index: 1;
}

.out-side-aftersaleapply .after-li .text-area {
  display: block;
  width: 100%;
  height: 135rpx;
  margin: 15rpx 0;
}

.out-side-aftersaleapply .after-li .text-area::-webkit-input-placeholder {
  color: #bfbfbf;
}

.out-side-aftersaleapply .up-load-bar {
  width: 790rpx;
  background-color: #fff;
  overflow: hidden;
  padding: 40rpx 0 40rpx 20rpx;
}

.out-side-aftersaleapply .up-load-bar .up-load-title {
  line-height: 40rpx;
}

.out-side-aftersaleapply .up-load-bar .img-group .img-group-k {
  width: 196rpx;
  height: 196rpx;
  float: left;
  margin: 20rpx 57rpx 0 0;
}

.out-side-aftersaleapply .up-load-bar .img-group image {
  width: 196rpx;
  height: 196rpx;
  border-radius: 5rpx;
}

.out-side-aftersaleapply .up-load-bar .up-load-btn {
  display: block;
  width: 196rpx;
  height: 196rpx;
  border: 3rpx solid #b3b3b3;
  float: left;
  border-radius: 5rpx;
  margin: 20rpx 57rpx 0 0;
}

.out-side-aftersaleapply .up-load-bar .up-load-btn .icon {
  display: block;
  width: 100%;
  height: 50rpx;
  background: url('https://api.duishangbao.cn/upload/image/icon_zu4.png') no-repeat center -550rpx/50rpx 1000rpx;
  margin: 40rpx 0 20rpx;
}

.out-side-aftersaleapply .up-load-bar .up-load-btn .txt-up {
  display: block;
  text-align: center;
  line-height: 26rpx;
}

.out-side-aftersaleapply .up-load-bar .up-load-btn .txt-b {
  display: block;
  text-align: center;
}

.out-side-aftersaleapply .form-btn {
  display: block;
  background-color: #e62343;
  width: 100vw;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 1;
}
