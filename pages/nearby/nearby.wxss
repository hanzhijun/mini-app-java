
.out-side-nearby {
  background: #fff url('https://api.duishangbao.cn/upload/image/index_all_bj2.png') no-repeat 0 -130rpx / 750rpx 324rpx
}

.out-side-nearby .swiper {
  width: 710rpx;
  height: 266rpx;
  overflow: hidden;
  position: relative;
  margin: 0 auto 10rpx;
  border-radius: 10rpx;
}

.out-side-nearby .swiper image {
  width: 710rpx!important;
  height: 266rpx!important;
}

.out-side-nearby .near-nav {
  display: block;
  padding: 20rpx 0 20rpx;
  background-color: #fff;
  overflow: hidden;
  border-bottom: 16rpx solid #f4f4f4;
}

.out-side-nearby .near-nav .near-list {
  display: inline-block;
  width: 110rpx;
  text-align: center;
  float: left;
  margin-left: 50rpx;
}

.out-side-nearby .near-nav .near-list:first-child {
  margin-left: 0;
}

.out-side-nearby .near-nav .near-list .img {
  text-align: center;
  height: 70rpx;
}

.out-side-nearby .near-nav .near-list .img image {
  width: 70rpx;
  height: 70rpx;
}

.out-side-nearby .near-nav .near-list .txt {
  padding: 10rpx 0 8rpx;
}

.out-side-nearby .hot-header {
  overflow: hidden;
  padding: 20rpx 20rpx 0;
  line-height: 30rpx;
}

.out-side-nearby .hot-header .hot {
  display: inline-block;
  padding-left: 20rpx;
  border-left: 3px solid #e62343;
}

.out-side-nearby .hot-header .more {
  float: right;
}

.out-side-nearby .hot-sj-ul {
  display: block;
  overflow: hidden;
  padding: 0 20rpx 20rpx;
}

.out-side-nearby .hot-sj-ul li {
  display: block;
  overflow: hidden;
  padding: 0 0 40rpx;
}

.out-side-nearby .hot-sj-ul li:first-child {
  padding-top: 35rpx;
}

.out-side-nearby .hot-sj-ul li .border-line-heng-e6e6e6 {
  margin-bottom: 35rpx;
}

.out-side-nearby .hot-sj-ul li:first-child .border-line-heng-e6e6e6 {
  display: none;
}

.out-side-nearby .hot-sj-ul .img {
  width: 188rpx;
  height: 188rpx;
  float: left;
  margin: 8rpx 20rpx 0 0;
}

.out-side-nearby .hot-sj-ul .img image {
  width: 188rpx;
  height: 188rpx;
  border-radius: 10rpx;
}

.out-side-nearby .hot-sj-ul .main {
  width: 500rpx;
  position: relative;
  float: left;
}

.out-side-nearby .hot-sj-ul .name {
  display: block;
  height: 40rpx;
}

.out-side-nearby .hot-sj-ul .addr {
  display: block;
  height: 40rpx;
}
.out-side-nearby .hot-sj-ul .price {
  display: block;
  height: 40rpx;
}

.out-side-nearby .hot-sj-ul .label {
  width: 500rpx;
  height: 34rpx;
  line-height: 34rpx;
  position: absolute;
  left: 0;
  top: 160rpx;
}

.out-side-nearby .hot-sj-ul .label .di {
  display: inline-block;
  padding-left: 38rpx;
  background: url('https://api.duishangbao.cn/upload/image/icon_zu6.png') no-repeat 0 0 / 60rpx 1200rpx;
  float: left;
}

.out-side-nearby .hot-sj-ul .label .tuan {
  width: 300rpx;
  display: inline-block;
  padding-left: 38rpx;
  background: url('https://api.duishangbao.cn/upload/image/icon_zu6.png') no-repeat 0 -60rpx / 60rpx 1200rpx;
  margin-left: 20rpx;
}