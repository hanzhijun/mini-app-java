/* pages/goodsDetail.wxss */

.out-side-goodsdetail {
  width: 100vw;
  min-height: 100vh;
  padding: 0 0 120rpx;
  overflow: hidden;
}

.out-side-goodsdetail .banner,
.out-side-goodsdetail .banner swiper {
  height: 100vw;
}

.out-side-goodsdetail .banner .slide-image {
  width: 100vw;
  height: 100vw
}

.out-side-goodsdetail .goods-main {
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 25rpx;
}

.out-side-goodsdetail .detai-info1 {
  height: 85rpx;
  padding: 0 20rpx;
  overflow: hidden;
}

.out-side-goodsdetail .detai-info1 .icon-rmb {
  display: inline-block;
  line-height: 40rpx;
  float: left;
  margin: 44rpx 0 0 0;
}

.out-side-goodsdetail .detai-info1 .price-now {
  display: inline-block;
  font-size: 64rpx;
  line-height: 64rpx;
  float: left;
  margin: 24rpx 5rpx 0 0;
}

.out-side-goodsdetail .detai-info1 .price-old {
  display: inline-block;
  line-height: 40rpx;
  float: left;
  margin: 44rpx 0 0 8rpx;
}

.out-side-goodsdetail .detai-info1 .goods-collect {
  display: inline-block;
  width: 60rpx;
  float: right;
  text-align: center;
  margin: 25rpx 0 0 0;
}

.out-side-goodsdetail .detai-info1 .goods-collect .clearfix {
  display: block;
  height: 33rpx;
  background: url('https://api.duishangbao.cn/upload/image/icon_zu4.png') no-repeat 13rpx -250rpx/50rpx 1000rpx;
}

.out-side-goodsdetail .detai-info1 .goods-collect.this-over .clearfix {
  background: url('https://api.duishangbao.cn/upload/image/icon_zu4.png') no-repeat 13rpx -300rpx/50rpx 1000rpx;
}

.out-side-goodsdetail .detai-info1 .goods-num {
  display: inline-block;
  line-height: 40rpx;
  float: right;
  margin: 44rpx 8rpx 0 0;
}

.out-side-goodsdetail .detai-info2 {
  width: 550rpx;
  height: 80rpx;
  margin: 2rpx 140rpx 2rpx 20rpx;
  background: url('https://api.duishangbao.cn/upload/image/qipao_jiao4.png') repeat-x 0 0/150rpx 80rpx;
  overflow: hidden;
}

.out-side-goodsdetail .detai-info2-bj2 {
  width: 550rpx;
  height: 80rpx;
  background: url('https://api.duishangbao.cn/upload/image/qipao_jiao3.png') no-repeat 0 0/150rpx 80rpx;
}

.out-side-goodsdetail .detai-info2-bj3 {
  width: 550rpx;
  height: 80rpx;
  line-height: 54rpx;
  background: url('https://api.duishangbao.cn/upload/image/qipao_jiao5.png') no-repeat right/150rpx 80rpx;
}

.out-side-goodsdetail .detai-info2.help-pay {
  width: 710rpx;
  margin: 2rpx 20rpx;
}
.out-side-goodsdetail .help-pay .detai-info2-bj2,
.out-side-goodsdetail .help-pay .detai-info2-bj3 {
  width: 710rpx;
  margin: 0;
  padding: 0;
}

.out-side-goodsdetail .help-pay .detail-info-main {
  display: flex;
  justify-content: space-around;
  text-align: center;
  position: relative;
  padding-top: 27rpx;
}

.out-side-goodsdetail .detai-info2-bj3 text {
  display: inline-block;
  height: 58rpx;
  line-height: 58rpx;
}

.out-side-goodsdetail .detai-info2-bj3 .line-ge {
  display: inline-block;
  width: 1px;
  height: 54rpx;
  background: url('https://api.duishangbao.cn/upload/image/qipao_jiao6.png') no-repeat right/1px 54px;
}


.out-side-goodsdetail .goods-name {
  line-height: 52rpx;
  font-size: 32rpx;
  color: #000;
  padding: 22rpx 20rpx 10rpx;
}

.out-side-goodsdetail .goods-name .icon {
  display: inline-block;
  height: 46rpx;
  line-height: 46rpx;
  background: #fc6c15 url('https://api.duishangbao.cn/upload/image/icon_zu.png') no-repeat 10rpx -495rpx / 70rpx 1000rpx;
  padding: 0 10rpx 0 55rpx;
  font-size: 32rpx;
  color: #fff;
  border-radius: 5rpx;
  margin-right: 10rpx;
}

.out-side-goodsdetail .goods-main .border-line-heng-e6e6e6 {
  width: 710rpx;
  margin: 0 auto;
}

.out-side-goodsdetail .goods-mess-bar {
  width: 710rpx;
  height: 78rpx;
  line-height: 78rpx;
  margin: 0 auto;
}

.out-side-goodsdetail .goods-mess-bar .title {
  display: inline-block;
  width: 90rpx;
  float: left;
}

.out-side-goodsdetail .goods-mess-bar .this-value {
  display: inline-block;
  width: 600rpx;
  float: left;
}

.out-side-goodsdetail .goods-mess-bar .icon {
  display: inline-block;
  width: 16rpx;
  height: 28rpx;
  float: right;
  margin-top: 26rpx;
  background: url('https://api.duishangbao.cn/upload/image/icon_zu4.png') no-repeat 0 -400rpx/50rpx 1000rpx;
}

.out-side-goodsdetail .goods-explain {
  height: 65rpx;
  line-height: 65rpx;
  padding: 0 20rpx;
  background-color: #ffeaed;
}

.out-side-goodsdetail .goods-explain text {
  display: inline-block;
  min-width: 90rpx;
  color: #cc250e;
  float: left;
}

.out-side-goodsdetail .goods-detail {
  overflow: hidden;
  background-color: #fff;
}

.out-side-goodsdetail .goods-detail .detail-title {
  text-align: center;
  padding: 40rpx 0 20rpx;
}

.out-side-goodsdetail .goods-detail .detail-title .txt {
  display: block;
  text-align: center;
  line-height: 50rpx;
}

.out-side-goodsdetail .goods-detail .detail-title i {
  clear: both;
  display: inline-block;
  width: 18rpx;
  height: 26rpx;
  background: url('https://api.duishangbao.cn/upload/image/icon_zu4.png') no-repeat 0 -500rpx/50rpx 1000rpx;
  margin: 0 auto;
}

.out-side-goodsdetail .detail-img image {
  width: 100vw;
}

.out-side-goodsdetail .detail-footer {
  width: 100vw;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  opacity: .99;
}

.out-side-goodsdetail .detail-footer .border-line-heng-e6e6e6 {
  width: 100%;
  height: 1px;
  float: left;
}

.out-side-goodsdetail .detail-footer .help-pay-btn {
  display: block;
  width: 550rpx;
  background-color: #e62343;
  color: #f4f4f4;
  padding: 16rpx 0;
  margin: 6rpx auto;
  border-radius: 90rpx;
}

.out-side-goodsdetail .detail-footer .to-order {
  width: 288rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #e62343;
  text-align: center;
  position: absolute;
  right: 0;
  top: 0;
}

.out-side-goodsdetail .detail-footer .to-cart {
  width: 175rpx;
  padding-top: 10rpx;
  float: left;
  text-align: center;
  position: relative;
}

.out-side-goodsdetail .detail-footer .to-cart .icon {
  display: block;
  width: 100%;
  height: 50rpx;
  background: url('https://api.duishangbao.cn/upload/image/icon_zu3.png') no-repeat 58rpx -280rpx/100rpx 700rpx;
  float: left;
  margin-top: 6rpx;
}

.out-side-goodsdetail .detail-footer .to-cart .txt {
  display: block;
  width: 100%;
  float: left;
  text-align: center;
}

.out-side-goodsdetail .detail-footer .to-cart .num {
  display: inline-block;
  position: absolute;
  font-size: 18rpx;
  color: #fff;
  background-color: #e62343;
  width: 38rpx;
  line-height: 10rpx;
  padding: 14rpx 0;
  left: 100rpx;
  top: 6rpx;
  border-radius: 50%;
  overflow: hidden;
  opacity: .9;
  z-index: 2;
}

.out-side-goodsdetail .detail-footer .border-line-shu-e6e6e6 {
  height: 56rpx;
  float: left;
  margin-top: 22rpx;
}

.out-side-goodsdetail .detail-footer .in-cart {
  width: 268rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  float: left;
  margin-left: 10rpx;
}

.out-side-goodsdetail .box-select-sku {
  width: 100vw;
  height: 100vh;
  display: none;
}

.out-side-goodsdetail .box-select-sku.this-show {
  display: block;
}

.out-side-goodsdetail .box-select-sku .box-sku-main {
  width: 100vw;
  height: 85vh;
  background-color: #fff;
  position: absolute;
  left: 0;
  bottom: 0;
}

.out-side-goodsdetail .box-select-sku .header {
  display: block;
  height: 95rpx;
  line-height: 95rpx;
  padding-left: 20rpx;
  overflow: hidden;
  background-color: #fff;
}

.out-side-goodsdetail .box-select-sku .header .opacity {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  background: url('https://api.duishangbao.cn/upload/image/icon_zu4.png') no-repeat 0 -350rpx/50rpx 1000rpx;
  float: right;
  margin: 30rpx 10rpx 0 0;
}

.out-side-goodsdetail .box-select-sku .info-bar {
  height: 260rpx;
}

.out-side-goodsdetail .box-select-sku .info-img {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  float: left;
  margin: 30rpx 30rpx 0 20rpx;
}

.out-side-goodsdetail .box-select-sku .info-img image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.out-side-goodsdetail .info-mess {
  width: 480rpx;
  height: 210rpx;
  float: left;
  margin-top: 30rpx;
}

.out-side-goodsdetail .info-mess .price {
  padding: 10rpx 0 10rpx;
}

.out-side-goodsdetail .info-mess .price-sku {
  font-size: 50rpx;
}

.out-side-goodsdetail .info-mess .note-txt {
  padding-top: 15rpx;
  line-height: 36rpx;
}

.out-side-goodsdetail .info-select {
  height: calc(85vh - 450rpx);
  overflow-y: auto;
}

.out-side-goodsdetail .info-select ul {
  display: block;
  padding: 16rpx;
}

.out-side-goodsdetail .info-select .type-name {
  display: block;
  line-height: 50rpx;
}

.out-side-goodsdetail .info-select .type-box {
  display: block;
  padding-top: 18rpx;
  overflow: hidden;
}

.out-side-goodsdetail .info-select .type-box .t-box {
  display: inline-block;
  padding: 10rpx 38rpx;
  border: 1px solid #ccc;
  color: #1a1a1a;
  float: left;
  margin: 0 20rpx 30rpx 0;
  border-radius: 60rpx;
}

.out-side-goodsdetail .info-select .type-box .t-box.this-over {
  border: 1px solid #e62343;
  color: #e62343;
  background-color: #fff7f8;
}

.out-side-goodsdetail .info-select .btn-box {
  overflow: hidden;
  padding: 15rpx 0 25rpx;
}

.out-side-goodsdetail .info-select .btn-box text {
  display: inline-block;
  font-size: 24rpx;
  color: #1a1a1a;
  padding: 9rpx 20rpx;
  float: left;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  border-right: 1px solid #ddd;
}

.out-side-goodsdetail .info-select .btn-box text.l {
  border-left: 1px solid #ddd;
  border-top-left-radius: 2px;
  border-bottom-left-radius: 2px;
}

.out-side-goodsdetail .info-select .btn-box text.r {
  border-top-right-radius: 2px;
  border-bottom-right-radius: 2px;
}

.out-side-goodsdetail .info-select .btn-box text.l:active,
.out-side-goodsdetail .info-select .btn-box text.r:active {
  background-color: #f0f0f0;
}

.out-side-goodsdetail .box-select-sku .footer {
  display: block;
  height: 98rpx;
}

.out-side-goodsdetail .box-select-sku .footer text {
  display: block;
  width: 50%;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  float: left;
  background-color: #fc6c15;
}

.out-side-goodsdetail .box-select-sku .footer text.go-pay {
  background-color: #e62343;
}
